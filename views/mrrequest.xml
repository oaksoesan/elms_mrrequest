<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="action_mrrequest" model="ir.actions.act_window">
            <field name="name">MR Request Action</field>
            <field name="res_model">mrrequest</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="mrrequest_menu" name="MR request" sequence="15"/>
        <menuitem id="mmrequest_info_menu" name="MR request"
                  parent="elms_mrrequest.mrrequest_menu" sequence="1"/>
        <menuitem id="mmrequest_info1_menu" name="MR request"
                  parent="elms_mrrequest.mmrequest_info_menu" sequence="1"
                  action="action_mrrequest"/>

        <record id="view_mrrequest_form" model="ir.ui.view">
            <field name="name">mrrequest.form</field>
            <field name="model">mrrequest</field>
            <field name="arch" type="xml">
                <form string="MR Request">
                    <header>
                        <button name="to_request" string="Confirm" type="object"
                                states="draft" class="oe_highlight"
                                group="base.mr_user"/>
                        <button name="to_cancel" string="Cancel" type="object"
                                states="requested" class="oe_highlight"
                                group="base.mr_user"/>
                        <button name="to_draft" string="Reset to draft"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'cancel')]}"
                                group="base.mr_user"/>

                        <button name="to_assign" string="Assign" type="object"
                                states="requested" class="oe_highlight"
                                group="base.mr_admin"
                        />
                        <button name="to_approve" string="Approve" type="object"
                                states="assigned" class="oe_highlight"
                                group="base.mr_approver"
                        />
                        <button name="to_complete" string="Completed"
                                type="object" states="approved"
                                class="oe_highlight" group="base.mr_admin"
                        />
                        <field name="state" widget="statusbar"
                               statusbar_visible="requested,assigned,approved,completed"/>
                    </header>
                    <sheet>
                        <div>
                            <h2>Request Information</h2>
                            <group>
                                <group>
                                    <field name="res_user_id"/>
                                    <field name="department"/>
                                    <field name="priority" widget="priority"
                                           class=""/>
                                    <field name="date_time"/>
                                    <field name="mr_location_id"/>
                                    <field name="job_section"/>
                                    <field name="problem_detail"/>
                                </group>
                                <group></group>
                            </group>
                        </div>
                        <notebook>
                            <page string="Maintenance Information">
                                <div>
                                    <group>
                                        <group>
                                            <field name="hr_employee_id"/>
                                            <field name="estimate_cost"/>
                                            <field name="estimate_start_time"/>
                                            <field name="estimate_end_time"/>
                                            <field name="actual_start_time"/>
                                            <field name="actual_end_time"/>
                                            <field name="job_status"/>
                                            <field name="maintenance_detail"/>
                                        </group>
                                        <group></group>
                                    </group>
                                </div>
                            </page>
                            <page string="Receiver Comment">
                                <div>
                                    <group>
                                        <group>
                                            <field name="received_status"/>
                                            <field name="received_date_time"/>
                                            <field name="received_note"/>
                                            <field name="approver_comment"/>
                                        </group>
                                        <group></group>
                                    </group>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="mrrequest_tree" model="ir.ui.view">
            <field name="name">MR request Tree</field>
            <field name="model">mrrequest</field>
            <field name="arch" type="xml">
                <tree>
                </tree>
            </field>
        </record>
    </data>
</openerp>
