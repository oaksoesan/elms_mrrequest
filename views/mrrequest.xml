<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="action_mrrequest" model="ir.actions.act_window">
            <field name="name">Maintenance Request</field>
            <field name="res_model">mrrequest</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_mr_location" model="ir.actions.act_window">
            <field name="name">Maintenance Location</field>
            <field name="res_model">mrrequest.location</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="mrrequest_menu"
                  name="Maintenance Request" sequence="15"/>
        <menuitem id="mmrequest_info_menu" name="Menu"
                  parent="elms_mrrequest.mrrequest_menu" sequence="1"/>
        <menuitem id="mmrequest_info1_menu" name="Maintenance Request"
                  parent="elms_mrrequest.mmrequest_info_menu" sequence="1"
                  action="action_mrrequest"/>
        <menuitem id="mr_location_menu" name="Maintenance Location"
                  parent="elms_mrrequest.mmrequest_info_menu" sequence="2"
                  action="action_mr_location"/>

        <record id="view_mrrequest_form" model="ir.ui.view">
            <field name="name">mrrequest.form</field>
            <field name="model">mrrequest</field>
            <field name="arch" type="xml">
                <form string="MR Request">
                    <header>
                        <button name="to_request" string="Confirm" type="object"
                                states="draft" class="oe_highlight"
                                group="base.mr_user"/>
                        <button name="to_cancel" string="Cancel" type="object"
                                states="requested" class="oe_highlight"
                                group="base.mr_user"/>
                        <button name="to_draft" string="Reset to draft"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'cancel')]}"
                                group="base.mr_user"/>
                        <button name="to_approve" string="Approve" type="object"
                                states="requested" class="oe_highlight"
                                group="base.mr_approver"
                        />
                        <button name="to_assign" string="Assign" type="object"
                                class="oe_highlight"
                                states="approved"
                                group="base.mr_admin"
                        />
                        <button name="to_complete" string="Completed"
                                type="object"
                                class="oe_highlight" group="base.mr_admin"
                                attrs="{'invisible': [('finish_time', '=', False)]}"
                        />
                        <field name="state" widget="statusbar"
                               statusbar_visible="requested,approved,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div>
                            <h2>Request Information</h2>
                            <group>
                                <group>
                                    <field name="res_user_id"/>
                                    <field name="department"/>
                                    <field name="priority" widget="priority"/>
                                    <field name="date_time"/>
                                    <field name="mr_location_id"/>
                                    <field name="job_section"/>
                                    <field name="problem_detail"/>
                                </group>
                                <group></group>
                            </group>
                            <div>
                                <h2 attrs="{'invisible': ['|', ('state', '=', 'draft'), ('state', '=', 'requested')]}">
                                    Approver Comment
                                    &#xA;
                                </h2>
                                <div>
                                    <p style="color: blue;">
                                        <field name="approver_comment"
                                               attrs="{'invisible': ['|', ('state', '=', 'draft'), ('state', '=', 'requested')]}"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <notebook>
                            <page string="Maintenance Information">
                                <div>
                                    <group>
                                        <group>
                                            <field name="hr_employee_id"/>
                                            <field name="estimate_cost"/>
                                            <field name="estimate_start_time"/>
                                            <field name="finish_time"  attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                                            <field name="maintenance_detail"/>
                                        </group>
                                        <group></group>
                                    </group>
                                </div>
                            </page>
                            <page string="Receiver Comment" attrs="{'invisible': [('state', '!=', 'completed')]}">
                            <div>
                                <group>
                                    <group>
                                        <field name="received_status"/>
                                        <field name="received_date_time"/>
                                        <field name="received_note"/>
                                    </group>
                                    <group></group>
                                </group>
                            </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="mrrequest_tree" model="ir.ui.view">
            <field name="name">MR request Tree</field>
            <field name="model">mrrequest</field>
            <field name="arch" type="xml">
                <tree colors="black:state == 'draft';
                              orange:state == 'requested';
                              blue:state == 'approved';
                              purple:state == 'in_progress';
                              green:state == 'completed';
                              grey:state == 'cancel';"
                      default_order="">
                    <field name="name"/>
                    <field name="res_user_id"/>
                    <field name="mr_location_id"/>
                    <field name="estimate_cost"/>
                    <field name="date_time"/>
                    <field name="estimate_start_time"/>
                    <field name="finish_time"/>
                    <field name="priority"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="mr_location_view_form" model="ir.ui.view">
            <field name="name">MR Location Form</field>
            <field name="model">mrrequest.location</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <group>
                            <field name="name"/>
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <record id="mr_location_view_tree" model="ir.ui.view">
            <field name="name">MR Location Tree</field>
            <field name="model">mrrequest.location</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>

